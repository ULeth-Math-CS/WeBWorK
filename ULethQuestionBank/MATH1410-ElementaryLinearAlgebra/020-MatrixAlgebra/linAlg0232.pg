#-ULETH-#

Context("Matrix");
do{
$A = Matrix([
[random(2,7)*non_zero_random(-1, 1), random(2,7)*non_zero_random(-1, 1), random(2,7)*non_zero_random(-1, 1),],
]);

$B = Matrix([
[random(2,7)*non_zero_random(-1, 1),],
[random(2,7)*non_zero_random(-1, 1),],
[random(2,7)*non_zero_random(-1, 1),],
]);
}
until(abs($B->element(1,1)) != abs($B->element(2,1)) && abs($B->element(2,1)) != abs($B->element(3,1)) && abs($A->element(1,1)) != abs($A->element(1,2)) && abs($A->element(1,2)) != abs($A->element(1,3)));

$a11=$A->element(1,1);
$a12=$A->element(1,2);
$a13=$A->element(1,3);

$b11=$B->element(1,1);

$b21=$B->element(2,1);

$b31=$B->element(3,1);

$C = $A * $B;

#-ENDULETH-#


#############################
#  Main text

#-ULETH-#

BEGIN_PGML
###Compute the product of [`AB`] where.

>>[`A = [$A]`] and [`B = [$B]`].<<

>>[`AB = `] [__]*{$C}[@ AnswerFormatHelp("matrices") @]*<<

END_PGML

$showPartialCorrectAnswers = 0;

#-ENDULETH-#


