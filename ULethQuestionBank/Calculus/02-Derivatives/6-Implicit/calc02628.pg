###################################
#  Setup

#-ULETH-#
Context("Numeric")->variables->add(y => 'Real');

$x1 = random(1,4,1)*random(-1,1,2);
do {
   $y1 = random(1,4,1)*random(-1,1,2);
   } while ($x1 == $y1);

$c = $x1**4 + $y1**4;

$m = -($x1/$y1)**3;
$b = $y1 - $m*$x1;

$ans1 = Compute("-(x)^3/(y)^3");
$ans2 = Compute("$m");
$ans3 = Compute("$m x + $b")->reduce();;

#-ENDULETH-#

###################################
#  Main Text

#-ULETH-#
