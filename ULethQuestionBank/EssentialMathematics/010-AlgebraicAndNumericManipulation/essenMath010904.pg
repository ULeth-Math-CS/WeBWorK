##################################################################

#####################################################################
#  Initialization
#####################################################################

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "AnswerFormatHelp.pl",
  "contextLimitedNumeric.pl",
);
TEXT(beginproblem());

####################################################################
#   Setup
###################################################################

#-ULETH-#
Context("LimitedNumeric");
$a=random(6,25) + random (0.1,0.9,0.1)+random(0.01,0.09,0.01); 
$b = random (6,25);

do{ $c=random(6,25) + random (0.1,0.9,0.1)+random(0.01,0.09,0.01); } until ($c!=$a);
$d = random (6,25);

do{ $e=random(6,25) + random (0.1,0.9,0.1)+random(0.01,0.09,0.01); } until ($e!=$a and $e!=$c);
$f = random (6,25);

$ans1 = -$a - $b;
$ans2 = -$c - $d; 
$ans3 = -$e - $f;


#-END_ULETH-#
  
##################################################################
#   Problem Text
#################################################################

#-ULETH-#
BEGIN_PGML

Evaluate:

`(-[$a]) + (-[$b]) =` [_____]     

`(-[$d]) + (-[$c]) =` [_____]     

`(-[$e]) + (-[$f]) =` [_____]     


END_PGML
# END_ULETH-#

###################################################################
#   Answer Evaluation
###################################################################

ANS(strict_num_cmp($ans1));
ANS(strict_num_cmp($ans2));
ANS(strict_num_cmp($ans3));

